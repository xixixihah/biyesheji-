.container {
  padding: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.menu-list {
  margin-top: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
} 