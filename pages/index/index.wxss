/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.search-box {
  display: flex;
  padding: 10rpx;
  background-color: #fff;
}

.search-input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  margin-right: 10rpx;
}

.search-button {
  padding: 10rpx 20rpx;
  background-color: #1890FF;
  color: #fff;
  border-radius: 5rpx;
}

/* 使用 hover-class 样式 */
.button-hover {
  background-color: #005BBB;
}

.location {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.category-tabs {
  display: flex;
  padding: 20rpx;
  background: #fff;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  color: #1890FF;
  font-weight: bold;
}

.map {
  flex: 1;
  width: 100%;
}
