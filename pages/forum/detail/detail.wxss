/* pages/forum/detail/detail.wxss */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.post-detail {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.post-header {
  margin-bottom: 24rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.post-category {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.post-time {
  color: #999;
}

.post-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 24rpx 0;
}

.comments-section {
  background: #fff;
  padding: 0 30rpx;
}

.comments-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.comments-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.comments-list {
  padding: 20rpx 0;
}

.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
  background: #f0f0f0;
}

.comment-content {
  flex: 1;
}

.comment-user {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.no-comments {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.comment-input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 16rpx 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.comment-button {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.comment-button-active {
  background: #1890ff;
  color: #fff;
}

.comment-button-disabled {
  background: #f5f5f5;
  color: #999;
}

.safe-bottom {
  padding-bottom: calc(env(safe-area-inset-bottom) + 16rpx);
}