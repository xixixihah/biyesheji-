<view class="publish-container">
  <textarea 
    class="content-input" 
    placeholder="分享你的想法..." 
    bindinput="onContentInput"
    maxlength="500"
  ></textarea>
  
  <view class="footer">
    <text class="count">{{content.length}}/500</text>
    <button class="publish-btn" bindtap="onPublish">发布</button>
  </view>
</view> 